<!DOCTYPE html>
<html>

<head>
    <script src="front.js"></script>
    <link href="style.css" type="text/css" rel="stylesheet" />
    <title>Media-Chat</title>
</head>

<body>
    <div class="medContainer">
        <div id='clients'>
            <select id="opt">
                    <option>No One Is Online</option>
            </select>
        </div>
        <div class="media-chat">
            <video id="remoteVideo" autoplay></video>
            <video id="localVideo" autoplay muted></video>

            <input id="videoCallButton" type="button" disabled value="Video Call" />
            <input id="endCallButton" type="button" disabled value="End Call" />
        </div>
        <div class="text-chat">
            <div id='text-client'>
                <select id="messaging-text">
                    <option>No One Is Online</option>
                </select>
            </div>
            <div class="msgContainer">
                <div id="messages"></div>
                <textarea type='text' id="msg" placeholder="write message"></textarea>
                <button type="button" id='send'>Send</button>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        window.addEventListener("load", media);
    </script>
</body>

</html>